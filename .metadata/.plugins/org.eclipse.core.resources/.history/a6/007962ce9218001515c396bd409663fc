var apiKey="RspQyE7vqwceJDz1q5aKkxcFofHac7xmDg5oe3G2";
var labelRootURL="https://api.fda.gov/drug/label.json";
$(document).ready(function()
 {
   $("#search_input").keypress(function(e) {
  if(e.keyCode == 13)
     {
         loadResultsForQuery(this.value);
     }
});
})



function loadResultsForQuery(query)
{
 $.ajax(
    {
        url: labelRootURL + '?api_key=' + apiKey + '&search=drug_interactions"' + query + '"'
    }).done(function(data) 
    {
       $('.drug-name').value(data.results[0].openfda.substance_name[0]);
       $('.interactions').value(data.results[0].active_ingredient[0]);
    });
}